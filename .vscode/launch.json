{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Authentication Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-authentication",
            "program": "${workspaceFolder}/fda/src/services/authentication/API/bin/Debug/net8.0/Authentication.API.dll",
            "args": [],
            "cwd": "${workspaceFolder}/fda/src/services/authentication/API",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
