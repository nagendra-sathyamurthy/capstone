{
  "info": {
    "name": "Order Service API",
    "description": "API collection for Order Service with order management functionality",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{order_base_url}}",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user123",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Order",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    if (response.id || response.orderId) {",
              "        pm.collectionVariables.set('orderId', response.id || response.orderId);",
              "    }",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{user_id}}\",\n  \"customerId\": \"{{customer_id}}\",\n  \"orderType\": \"delivery\",\n  \"items\": [\n    {\n      \"itemId\": \"{{item_id}}\",\n      \"name\": \"Margherita Pizza (Large)\",\n      \"sku\": \"PIZZA-MARG-LG\",\n      \"quantity\": 1,\n      \"unitPrice\": 18.99,\n      \"totalPrice\": 18.99,\n      \"category\": \"Pizza\",\n      \"restaurant\": \"Tony's Authentic Pizzeria\",\n      \"preparationTime\": 15,\n      \"specialInstructions\": \"Extra basil please\"\n    },\n    {\n      \"itemId\": \"curry-tikka-reg\",\n      \"name\": \"Chicken Tikka Masala\",\n      \"sku\": \"CURRY-TIKKA-REG\",\n      \"quantity\": 2,\n      \"unitPrice\": 16.95,\n      \"totalPrice\": 33.90,\n      \"category\": \"Indian Curry\",\n      \"restaurant\": \"Spice Garden Indian Cuisine\",\n      \"preparationTime\": 20,\n      \"spiceLevel\": \"Mild\",\n      \"specialInstructions\": \"Medium spice level, extra rice\"\n    },\n    {\n      \"itemId\": \"dessert-choc-lava\",\n      \"name\": \"Chocolate Lava Cake\",\n      \"sku\": \"DESSERT-CHOC-LAVA\",\n      \"quantity\": 1,\n      \"unitPrice\": 8.95,\n      \"totalPrice\": 8.95,\n      \"category\": \"Dessert\",\n      \"restaurant\": \"Sweet Endings Bakery\",\n      \"preparationTime\": 8\n    }\n  ],\n  \"deliveryAddress\": {\n    \"firstName\": \"Emily\",\n    \"lastName\": \"Chen\",\n    \"street\": \"2847 Fillmore Street\",\n    \"apartment\": \"Apt 4B\",\n    \"city\": \"San Francisco\",\n    \"state\": \"CA\",\n    \"zipCode\": \"94115\",\n    \"country\": \"United States\",\n    \"phoneNumber\": \"+1-415-555-0187\",\n    \"deliveryInstructions\": \"Ring doorbell twice. Leave at door if no answer. Building entrance code: 1234\"\n  },\n  \"paymentAddress\": {\n    \"firstName\": \"Emily\",\n    \"lastName\": \"Chen\",\n    \"street\": \"2847 Fillmore Street\",\n    \"apartment\": \"Apt 4B\",\n    \"city\": \"San Francisco\",\n    \"state\": \"CA\",\n    \"zipCode\": \"94115\",\n    \"country\": \"United States\",\n    \"phoneNumber\": \"+1-415-555-0187\"\n  },\n  \"orderNotes\": \"Family dinner order. Please ensure all items arrive together and hot. Contact if any items unavailable.\",\n  \"preferredDeliveryTime\": \"2025-11-06T19:30:00Z\",\n  \"estimatedDeliveryTime\": \"2025-11-06T19:45:00Z\",\n  \"maxPreparationTime\": 20,\n  \"subtotal\": 61.84,\n  \"taxAmount\": 5.57,\n  \"deliveryFee\": 3.99,\n  \"serviceFee\": 2.50,\n  \"tip\": 12.36,\n  \"totalAmount\": 86.26\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order"]
        },
        "description": "Create a new order from cart items"
      },
      "response": []
    },
    {
      "name": "Get All Orders",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/order",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order"]
        },
        "description": "Retrieve all orders (admin functionality)"
      },
      "response": []
    },
    {
      "name": "Get Order by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/order/{{orderId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "{{orderId}}"]
        },
        "description": "Retrieve a specific order by its ID"
      },
      "response": []
    },
    {
      "name": "Get Orders by User ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/order/user/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "user", "{{userId}}"]
        },
        "description": "Retrieve all orders for a specific user"
      },
      "response": []
    },
    {
      "name": "Update Order Status",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"Processing\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order/{{orderId}}/status",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "{{orderId}}", "status"]
        },
        "description": "Update the status of an order (Pending, Processing, Shipped, Delivered, Cancelled)"
      },
      "response": []
    },
    {
      "name": "Cancel Order",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"reason\": \"Customer requested cancellation\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/order/{{orderId}}/cancel",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "{{orderId}}", "cancel"]
        },
        "description": "Cancel an existing order"
      },
      "response": []
    },
    {
      "name": "Get Order History",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/order/{{orderId}}/history",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "{{orderId}}", "history"]
        },
        "description": "Get the status history/tracking information for an order"
      },
      "response": []
    },
    {
      "name": "Search Orders",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/order/search?status=Processing&dateFrom=2024-01-01&dateTo=2024-12-31",
          "host": ["{{baseUrl}}"],
          "path": ["api", "order", "search"],
          "query": [
            {
              "key": "status",
              "value": "Processing"
            },
            {
              "key": "dateFrom",
              "value": "2024-01-01"
            },
            {
              "key": "dateTo",
              "value": "2024-12-31"
            }
          ]
        },
        "description": "Search orders by various criteria"
      },
      "response": []
    }
  ]
}