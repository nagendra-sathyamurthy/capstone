            "body": {
              "mode": "raw",
              "raw": "{\n  \"customerId\": \"{{customerId}}\",\n  \"orderId\": \"{{orderId}}\",\n  \"pointsEarned\": 25,\n  \"bonusReason\": \"Customer satisfaction recovery - extra points for inconvenience\",\n  \"operatorId\": \"{{operatorId}}\"\n}"
