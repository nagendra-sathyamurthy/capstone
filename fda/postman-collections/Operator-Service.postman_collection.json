{
  "info": {
    "name": "Operator Service API",
    "description": "API collection for Operator (Cashier/Supervisor) operations including order processing, customer service, staff coordination, and operational reporting",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "{{operator_base_url}}",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "{{operator_auth_token}}",
      "type": "string"
    },
    {
      "key": "restaurantId",
      "value": "tonys_pizzeria",
      "type": "string"
    },
    {
      "key": "operatorId",
      "value": "TP-OP-001",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Order Processing",
      "item": [
        {
          "name": "Get Active Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/operator/{{restaurantId}}/orders?status=active",
              "host": ["{{baseUrl}}"],
              "path": ["api", "operator", "{{restaurantId}}", "orders"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            },
            "description": "Get all active orders (pending, confirmed, preparing) for processing"
          },
          "response": []
        },
        {
          "name": "Create Walk-in Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderType\": \"walk-in\",\n  \"customerInfo\": {\n    \"name\": \"John Smith\",\n    \"phoneNumber\": \"+1-555-0987\",\n    \"isNewCustomer\": false\n  },\n  \"items\": [\n    {\n      \"menuItemId\": \"pizza-margherita\",\n      \"quantity\": 1,\n      \"size\": \"large\",\n      \"specialInstructions\": \"Extra basil, light cheese\"\n    },\n    {\n      \"menuItemId\": \"drink-coca-cola\",\n      \"quantity\": 2,\n      \"size\": \"medium\"\n    }\n  ],\n  \"paymentMethod\": \"cash\",\n  \"totalAmount\": 24.97,\n  \"operatorId\": \"{{operatorId}}\",\n  \"notes\": \"Customer paying cash, waiting at counter\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/operator/{{restaurantId}}/orders",
              "host": ["{{baseUrl}}"],
              "path": ["api", "operator", "{{restaurantId}}", "orders"]
            },
            "description": "Create a new walk-in order for customers at the counter"
          },
          "response": []
        },
        {
          "name": "Update Order Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"confirmed\",\n  \"operatorId\": \"{{operatorId}}\",\n  \"estimatedCompletionTime\": \"2024-01-20T14:15:00Z\",\n  \"notes\": \"Confirmed with customer, payment processed\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/operator/{{restaurantId}}/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "operator", "{{restaurantId}}", "orders", "{{orderId}}", "status"]
            },
            "description": "Update order status with operator oversight"
          },
          "response": []
        },
        {
          "name": "Process Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{orderId}}\",\n  \"paymentMethod\": \"card\",\n  \"amount\": 24.97,\n  \"cardDetails\": {\n    \"lastFourDigits\": \"4532\",\n    \"cardType\": \"Visa\"\n  },\n  \"operatorId\": \"{{operatorId}}\",\n  \"tip\": 5.00,\n  \"receiptRequested\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/operator/{{restaurantId}}/orders/{{orderId}}/payment",
              "host": ["{{baseUrl}}"],
              "path": ["api", "operator", "{{restaurantId}}", "orders", "{{orderId}}", "payment"]
            },
            "description": "Process payment for orders at the point of sale"
          },
          "response": []
        },
        {
          "name": "Handle Order Issue",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderId\": \"{{orderId}}\",\n  \"issueType\": \"item_unavailable\",\n  \"description\": \"Large pizza dough ran out, offering medium size instead\",\n  \"resolution\": \"size_substitution\",\n  \"compensationType\": \"partial_refund\",\n  \"compensationAmount\": 3.00,\n  \"customerApproval\": true,\n  \"operatorId\": \"{{operatorId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/operator/{{restaurantId}}/orders/{{orderId}}/issues",
              "host": ["{{baseUrl}}"],
              "path": ["api", "operator", "{{restaurantId}}", "orders", "{{orderId}}", "issues"]
            },
            "description": "Handle order issues and customer complaints"
          },
          "response": []
        }
      ]
