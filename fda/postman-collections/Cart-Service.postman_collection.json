{
  "info": {
    "name": "Cart Service API",
    "description": "API collection for Cart Service with shopping cart management functionality",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5004",
      "type": "string"
    },
    {
      "key": "cartId",
      "value": "",
      "type": "string"
    },
    {
      "key": "userId",
      "value": "user123",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Create Cart",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "    const response = pm.response.json();",
              "    if (response.id) {",
              "        pm.collectionVariables.set('cartId', response.id);",
              "    }",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{userId}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/cart",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart"]
        },
        "description": "Create a new shopping cart for a user"
      },
      "response": []
    },
    {
      "name": "Get Cart by ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cart/{{cartId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "{{cartId}}"]
        },
        "description": "Retrieve a specific cart by its ID"
      },
      "response": []
    },
    {
      "name": "Get Cart by User ID",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cart/user/{{userId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "user", "{{userId}}"]
        },
        "description": "Retrieve the cart for a specific user"
      },
      "response": []
    },
    {
      "name": "Add Item to Cart",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"itemId\": \"item123\",\n  \"name\": \"Sample Product\",\n  \"quantity\": 2,\n  \"price\": 29.99\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/cart/{{cartId}}/items",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "{{cartId}}", "items"]
        },
        "description": "Add an item to the shopping cart"
      },
      "response": []
    },
    {
      "name": "Update Item Quantity",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"quantity\": 5\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/cart/{{cartId}}/items/item123",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "{{cartId}}", "items", "item123"]
        },
        "description": "Update the quantity of an item in the cart"
      },
      "response": []
    },
    {
      "name": "Remove Item from Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cart/{{cartId}}/items/item123",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "{{cartId}}", "items", "item123"]
        },
        "description": "Remove a specific item from the cart"
      },
      "response": []
    },
    {
      "name": "Clear Cart",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cart/{{cartId}}/clear",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "{{cartId}}", "clear"]
        },
        "description": "Remove all items from the cart"
      },
      "response": []
    },
    {
      "name": "Get Cart Total",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/cart/{{cartId}}/total",
          "host": ["{{baseUrl}}"],
          "path": ["api", "cart", "{{cartId}}", "total"]
        },
        "description": "Calculate the total value of items in the cart"
      },
      "response": []
    }
  ]
}