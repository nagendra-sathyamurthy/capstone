{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Authentication Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/authentication/Services/bin/Debug/net6.0/authentication.dll",
            "args": [],
            "cwd": "${workspaceFolder}/authentication/Services",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://.*)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch Catalog Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/catalog/Services/bin/Debug/net6.0/catalog.Services.dll",
            "args": [],
            "cwd": "${workspaceFolder}/catalog/Services",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://.*)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        },
        {
            "name": "Launch CRM Service",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/crm/Services/bin/Debug/net6.0/crm.dll",
            "args": [],
            "cwd": "${workspaceFolder}/crm/Services",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Now listening on: (https?://.*)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
}
